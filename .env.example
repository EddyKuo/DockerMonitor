# DockerMonitor Environment Variables
# Copy this file to .env and fill in your actual values

# ===== Jump Host Configuration =====
JUMP_HOST=jump.example.com
JUMP_PORT=22
JUMP_USER=your_username
JUMP_KEY_PATH=~/.ssh/id_rsa

# ===== Monitoring Settings =====
# Default monitoring interval in seconds
MONITOR_INTERVAL=60

# SSH connection timeout in seconds
TIMEOUT=30

# Maximum concurrent SSH connections
MAX_WORKERS=5

# ===== Output Settings =====
# Default output format: json, table, csv
OUTPUT_FORMAT=table

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Output directory for logs and exports
OUTPUT_DIR=./output

# ===== TUI Settings =====
# Auto-refresh interval in TUI mode (seconds)
TUI_REFRESH_INTERVAL=60

# Enable debug mode (shows more detailed logs)
DEBUG=false
